# Server
PORT=4000
BASE_URL=http://localhost:4000
SESSION_SECRET=replace-me

# Spotify OAuth
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REDIRECT_URI=http://localhost:4000/auth/callback

# Web
VITE_API_BASE=http://localhost:4000
WEB_URL=http://localhost:5173

# Testing helpers
# Allow the host to also join as a participant (synthetic member for easier local testing)
ALLOW_HOST_AS_PARTICIPANT=false

# Optional: Log Spotify API calls for debugging
LOG_SPOTIFY_API_CALLS=true

# Email Notifications (optional)
# If both are configured, email notifications will be sent when users log in
RESEND_API_KEY=your_resend_api_key
NOTIFICATION_EMAIL=your-email@example.com
